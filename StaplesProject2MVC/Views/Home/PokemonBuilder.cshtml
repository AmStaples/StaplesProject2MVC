@model Pokemon 

<form asp-action="Edit" method="post">
    <label asp-for="Id">Pokedex ID</label> <input type="text" asp-for="Id" />
    <label asp-for="Name">Name</label> <input type="text" asp-for="Name" />
    <label asp-for="Hp">HP</label> <input type="text" asp-for="Hp" />
    <label asp-for="Attack">Attack</label> <input type="text" asp-for="Attack" />
    <label asp-for="Defense">Defense</label> <input type="text" asp-for="Defense" />
    <label asp-for="SpAttack">Sp.Attack</label> <input type="text" asp-for="SpAttack" />
    <label asp-for="SpDefense">Sp.Defense</label> <input type="text" asp-for="SpDefense" />
    <label asp-for="Speed">Speed</label> <input type="text" asp-for="Speed" />
    <button type="submit">Submit</button>
</form>
